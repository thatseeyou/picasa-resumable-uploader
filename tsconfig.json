{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "removeComments": false,
    "listFiles": true,
	"typeRoots": [
		"node_modules/@types",
		"types"
	],
	"types": [],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "types/*",
		"*"
      ]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
